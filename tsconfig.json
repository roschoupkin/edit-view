{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "jsx": "react",
    "declaration": false,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "allowJs": true,
    "lib": [
      "dom",
      "es5",
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/**/*.d.ts"
    ],
    "paths": {
      "@ui/*": ["src/components/ui/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@editor/*": ["src/components/editor/*"]
    }
  },
  "include": [
    "src/index.tsx",
    "template/index.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
